<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollForm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="30dp"
            tools:context=".rol_administrador.InformacionAsesoresParActivity">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnRegresar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_btn_flecha_regresar"
                    android:src="@drawable/flecha_regresar_icon" />

                <TextView
                    android:id="@+id/textoPagina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="30dp"
                    android:text="Información de la solicitud"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Estudiante -->
            <TextView
                android:layout_marginTop="30dp"
                android:text="Estudiante"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/campoEstudiante"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/style_inputs"
                android:paddingStart="20dp"
                android:focusable="false"
                android:clickable="false"/>

            <!-- Asesor -->
            <TextView
                android:layout_marginTop="30dp"
                android:text="Asesor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/campoAsesor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/style_inputs"
                android:paddingStart="20dp"
                android:focusable="false"
                android:clickable="false"/>

            <!-- Materia -->
            <TextView
                android:layout_marginTop="30dp"
                android:text="Materia"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/campoMateria"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/style_inputs"
                android:paddingStart="20dp"
                android:focusable="false"
                android:clickable="false"/>

            <!-- Modalidad -->
            <TextView
                android:layout_marginTop="30dp"
                android:text="Modalidad"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/campoModalidad"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/style_inputs"
                android:paddingStart="20dp"
                android:focusable="false"
                android:clickable="false"/>

            <!-- Horario -->
            <TextView
                android:layout_marginTop="30dp"
                android:text="Horario"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/campoHorario"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/style_inputs"
                android:paddingStart="20dp"
                android:focusable="false"
                android:clickable="false"/>

            <!-- Fecha -->
            <TextView
                android:layout_marginTop="30dp"
                android:text="Fecha de inicio"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/campoFecha"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/style_inputs"
                android:paddingStart="20dp"
                android:focusable="false"
                android:clickable="false"/>

            <!-- Razón -->
            <TextView
                android:layout_marginTop="30dp"
                android:text="Razón"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/campoRazon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/style_inputs"
                android:paddingStart="20dp"
                android:focusable="false"
                android:clickable="false"/>

            <!-- Nota -->
            <TextView
                android:layout_marginTop="30dp"
                android:text="Nota del estudiante"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/campoNota"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/style_inputs"
                android:padding="12dp"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:scrollbars="vertical"
                android:focusable="false"
                android:clickable="false"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>