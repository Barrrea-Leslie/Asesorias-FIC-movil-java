<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rol_administrador.InformacionEstudiantesActivity"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="30dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flecha_regresar_icon"
            android:background="@drawable/style_btn_flecha_regresar"
            />

        <TextView
            android:id="@+id/textoPagina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informacion Estudiante"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/txAsesorPar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estudiante"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/campoAsesorPar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/style_inputs"
        android:layout_marginTop="12dp"
        android:paddingStart="20dp"
        android:text="Luis Fernando Velazquez Araujo"
        />

    <TextView
        android:id="@+id/txNumeroCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estudiante"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/campoNumeroCuenta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/style_inputs"
        android:layout_marginTop="12dp"
        android:paddingStart="20dp"
        android:text="19519958"
        />

    <TextView
        android:id="@+id/txLicenciatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Licenciatura"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/campoLicenciatura"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/style_inputs"
        android:layout_marginTop="12dp"
        android:paddingStart="20dp"
        android:text="Infromatica"
        />

    <TextView
        android:id="@+id/txGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grado y grupo"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        />
    <Spinner
        android:id="@+id/spGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/txCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo Institucional"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/campoCorreo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/style_inputs"
        android:layout_marginTop="12dp"
        android:paddingStart="20dp"
        android:text="lf.velazquez22@info.uas.edu.mx"
        />

    <TextView
        android:id="@+id/txNumeroTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo Institucional"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/campoNumeroTelefono"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/style_inputs"
        android:layout_marginTop="12dp"
        android:paddingStart="20dp"
        android:text="6672136911"
        />

    <TextView
        android:id="@+id/txPromedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promedio"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/campoPromedio"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/style_inputs"
        android:layout_marginTop="12dp"
        android:paddingStart="20dp"
        android:text="8"
        />

    <Button
        android:id="@+id/btnFiltro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicar Cambios"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:backgroundTint="@null"
        android:background="@drawable/style_btn_filtros"
        />

</LinearLayout>