<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ENCABEZADO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Aesores Diciplinares"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp">

            <!-- ICONO MENÚ -->
            <!--            <ImageView-->
            <!--                android:layout_width="30dp"-->
            <!--                android:layout_height="30dp"-->
            <!--                android:padding="2dp"-->
            <!--                android:src="@drawable/ic_menu_blue" />-->

            <!-- TÍTULO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solicitudes pendientes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:textColor="#000000"/>
        </LinearLayout>


        <!-- TARJETA 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:paddingBottom="25dp"
            android:layout_margin="10dp"
            android:elevation="4dp"
            android:clipToPadding="false"
            app:backgroundTint="@null"
            android:background="@drawable/style_tarjeta_diciplinares"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alumno: Jose Angel Astorga Mejia"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Materia: Programacion"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: 25/SEP/2025"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario: 18:00-19:00"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="modalidad: virtual"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"/>


            <!-- BOTONES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="rechazar"
                    android:backgroundTint="#D32F2F"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="20dp"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Aceptar"
                    android:backgroundTint="#2E7D32"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

        </LinearLayout>



        <!-- TARJETA 2 (COPIA DE LA PRIMERA) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:paddingBottom="25dp"
            android:layout_margin="10dp"
            android:elevation="4dp"
            android:clipToPadding="false"
            app:backgroundTint="@null"
            android:background="@drawable/style_tarjeta_diciplinares">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alumno: Jenifer Guadalape Tizoc Lopez"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Materia: Programacion"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: 25/SEP/2025"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario: 18:00-19:00"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="modalidad: virtual"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="rechazar"
                    android:backgroundTint="#D32F2F"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="20dp"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Aceptar"
                    android:backgroundTint="#2E7D32"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
