<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="310dp"
    android:layout_gravity="center"
    android:padding="20dp"
    android:background="@drawable/style_ventana_confirmacion">

    <TextView
        android:id="@+id/tituloVentana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechazar Solicitud"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textoVentana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Motivo del rechazo"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tituloVentana"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/campoMotivo"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:hint="Escribe el motivo del rechazo"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:padding="12dp"
        android:background="@drawable/style_inputs"
        app:layout_constraintTop_toBottomOf="@id/textoVentana"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/contenedorBotones" />

    <LinearLayout
        android:id="@+id/contenedorBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Cancelar"
            android:layout_marginEnd="15dp"
            android:background="@drawable/style_btn_ventana_confirmacion"
            app:backgroundTint="#8F8F8F" />

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Aceptar"
            android:background="@drawable/style_btn_ventana_confirmacion"
            app:backgroundTint="#4A9556" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>